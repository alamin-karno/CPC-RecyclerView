<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#CCF3F8"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/model_imageView"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight=".3"
            android:src="@drawable/ic_baseline_account_circle_24"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/model_nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: Md. Al-Amin"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/model_rollTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll : 12"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/model_departmentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: CSE"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/model_sectionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Section : PC-C"
                android:padding="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/model_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:text="click"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>